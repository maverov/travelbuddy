<div class="nav-bar mb-2">
    <% include partials/header %>
</div>

<div class="container">
    <a class="d-block mt-3 ml-3" href="/"><i class="fa fa-arrow-left"></i> Go Back</a>
    <h2 class="text-center mb-5 text-dark fancy-title">Login</h2>
</div>

<div class="container my-5 text-dark">
    <form action="/login" method="POST" class="text-dark d-flex justify-content-center">
        <div class="center-content" style="width: 40%;">
            <div class="form-group">
                <label class="text-dark" for="username">Username:</label>
                <input type="text" class="form-control" name="username" autocomplete="off"
                    placeholder="Enter your username...">
            </div>

            <div class="form-group">
                <label class="text-dark" for="password">Password:</label>
                <input type="password" class="form-control" autocomplete="off" name="password"
                    placeholder="Enter your password...">
            </div>
            <input class="btn btn-success btn-lg text-uppercase" type="submit" value="Sign In">
        </div>
    </form>
</div>

