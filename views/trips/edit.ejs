<!-- Navbar -->
<div class="nav-bar">
    <% include ../partials/header %>
</div>

<!-- MAIN CONTENT -->
<div class="container my-5" style="font-size: 0.8rem;">
    <div class="center-content">
        <h2 class="text-center mb-5 text-dark fancy-title">Edit "<%= trip.destinationName %>"</h2>
        <div class="my-3" style="width: 60%; margin: 20px auto;">
            <form action="/trips/<%= trip._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="name" class="text-dark">Where are you travelling to? (e.g. Destination):</label>
                    <input type="text" name="destination" placeholder="Name of Destination..." class="form-control"
                        value="<%= trip.destinationName %>" required>
                </div>
                <div class="form-group">
                    <label for="name" class="text-dark">Please provide a URL to a photo of your destination:</label>
                    <input type="text" name="image" placeholder="Image URL..." class="form-control"
                        value="<%= trip.image %>" required>
                </div>
                <div class="form-group">
                    <label for="name" class="text-dark">You will be leaving from:</label>
                    <input type="text" name="leavingfrom" placeholder="e.g. city, country" class="form-control"
                        value="<%= trip.leavingFrom %>" required>
                </div>
                <div class="form-group">
                    <label for="name" class="text-dark">Dates:</label>
                    <input type="text" name="dates" placeholder="DD/MM/YYYY - DD/MM/YYYY" class="form-control"
                        value="<%= trip.dates %>" required>
                </div>
                <div class="form-group mb-3">
                    <label for="name" class="text-dark">Description of your travellings:</label>
                    <input type="text" name="description" placeholder="Detailed description" class="form-control"
                        value="<%= trip.description %>" required>
                </div>
                <button class="mt-2 btn btn-success btn-block">Submit</button>
            </form>
            <a class="d-block mt-3" href="/trips/<%= trip._id %>"><i class="fa fa-arrow-left"></i> Go Back</a>
        </div>

    </div>
</div>

<br><br>
<!-- END OF MAIN CONTENT -->

<!-- Footer -->
<div class="mt-4"></div>
